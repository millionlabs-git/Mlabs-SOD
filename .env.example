# Server
PORT=8080

# Database
DATABASE_URL=postgres://postgres:postgres@localhost:5432/orchestrator

# Auth — shared secret for webhook + worker callbacks
WEBHOOK_SECRET=change-me-to-a-real-secret

# Google Cloud — for launching Cloud Run Job workers
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=europe-west1
GCP_SERVICE_ACCOUNT_KEY=  # base64-encoded JSON service account key

# Worker
WORKER_JOB_NAME=prd-worker

# Queue
POLL_INTERVAL_MS=5000

# Orchestrator public URL (so workers can call back)
ORCHESTRATOR_URL=http://localhost:8080

# Deploy phase (optional — leave empty to skip deployment)
NEON_API_KEY=
FLY_API_TOKEN=

# Set to "true" to log instead of launching Cloud Run workers
DRY_RUN=true
